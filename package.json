{
  "name": "pavelsanchez.com",
  "version": "1.0.0",
  "description": "My personal portfolio website and blog.",
  "main": "eleventy.js",
  "author": "Pavel Sanchez",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PaleBluDot/website.git"
  },
  "scripts": {
    "start": "npm run clean && npm run dev",
    "dev": "npm run sass:dev && npx @11ty/eleventy --serve",
    "clean": "rm -r build",
    "sass:dev": "npx sass src/scss/main.scss --style=expanded build/main.dev.css",
    "sass": "npx sass src/scss/main.scss --style=compressed build/main.min.css",
    "build": "npm run sass && ENVIRONMENT=production npx @11ty/eleventy"
  },
  "dependencies": {
    "@11ty/eleventy": "^2.0.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "node-sass": "^8.0.0",
    "sass": "^1.62.0"
  }
}
